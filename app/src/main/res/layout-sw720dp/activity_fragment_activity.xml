<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/lmenu"
    android:background="@color/white"
    tools:context=".fragment_home">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="-20dp"
            android:backgroundTint="@color/white"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="4"
                    android:src="@drawable/ic_hris"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QHomemart"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.v7.widget.CardView
                    android:outlineSpotShadowColor="@color/main_blue_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foreground="?android:selectableItemBackground"
                    app:cardCornerRadius="8dp"
                    android:layout_weight="1"
                    app:cardElevation="8dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="8dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:id="@+id/abs_masuk"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00:00"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textColor="@color/greennew"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/greennew"
                                android:text="@string/presensi_masuk"
                                android:textStyle="bold"
                                android:gravity="center"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_weight="1"
                            >

                            <TextView
                                android:id="@+id/abs_pulang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="00:00"
                                android:textAlignment="center"
                                android:textSize="24sp"
                                android:textColor="@color/red_btn_bg_pressed_color"
                                android:textStyle="bold"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/red_btn_bg_pressed_color"
                                android:text="@string/presensi_pulang"
                                android:textStyle="bold"
                                android:gravity="center"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:outlineSpotShadowColor="@color/main_blue_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp"
                    >

                    <LinearLayout
                        android:background="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:text="@string/informasi_memo"
                                android:textSize="16sp"
                                />

                            <TextView
                                android:id="@+id/tx_lihat_selengkapnya"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textColor="@color/main_blue_color"
                                android:text="Lihat semua"
                                android:textSize="14sp"

                                />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txinformasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="20dp"
                            android:textColor="@color/colorPrimaryDark"
                            android:layout_marginBottom="4dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:visibility="gone"
                            />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rvMemo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            tools:itemCount="1"
                            tools:listitem="@layout/list_memo"
                            />

                    </LinearLayout>



                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:paddingStart="@dimen/padd_10"
                    android:paddingEnd="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:outlineSpotShadowColor="@color/main_blue_color"
                        android:id="@+id/cvMasuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/absensiMasuk"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:padding="8dp"
                                android:src="@drawable/login"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Masuk"
                                android:textColor="@color/quantum_black_100"
                                android:textAlignment="center"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:outlineSpotShadowColor="@color/main_blue_color"
                        android:id="@+id/cvPulang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="8dp"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/absensiKeluar"
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:padding="8dp"
                                android:src="@drawable/logout" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pulang"
                                android:textColor="@color/quantum_black_100"
                                android:textAlignment="center"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:paddingStart="@dimen/padd_10"
                    android:paddingEnd="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:outlineSpotShadowColor="@color/main_blue_color"
                        android:id="@+id/cvSakit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:id="@+id/mulaiIstirahat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_mulai_istirahat" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mulai Istirahat"
                                android:textAlignment="center"
                                android:textColor="@color/quantum_black_100"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:outlineSpotShadowColor="@color/main_blue_color"
                        android:id="@+id/cvIzin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:id="@+id/selesaiIstirahat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_selesai_istirahat" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selesai Istirahat"
                                android:textColor="@color/quantum_black_100"
                                android:textAlignment="center"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:paddingStart="@dimen/padd_10"
                    android:paddingEnd="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <android.support.v7.widget.CardView
                        android:outlineSpotShadowColor="@color/main_blue_color"
                        android:id="@+id/cvTugas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:id="@+id/mulaiLembur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_lembur"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Mulai Lembur"
                                android:textAlignment="center"
                                android:textColor="@color/quantum_black_100"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:outlineSpotShadowColor="@color/main_blue_color"
                        android:id="@+id/cvKeluar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:focusable="true"
                        android:clickable="true"
                        android:foreground="?android:selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        app:cardElevation="8dp">

                        <LinearLayout
                            android:id="@+id/selesaiLembur"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="75dp"
                                android:padding="8dp"
                                android:src="@drawable/ic_selesai_lembur" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Selesai Lembur"
                                android:textColor="@color/quantum_black_100"
                                android:textAlignment="center"
                                android:textSize="12dp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--<LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="55dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Perlu bantuan ?"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="@color/grey_darken_4"/>

                    <TextView
                        android:id="@+id/btnBantuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Klik disini"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:textColor="@color/error_stroke_color"
                        android:layout_marginStart="@dimen/gap"/>
                </LinearLayout>-->

            </LinearLayout>

        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>