<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_project"
    android:layout_height="match_parent">

    <LinearLayout

        android:id="@+id/lin_form_izin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="53dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/lytoolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            >

            <include
                android:id="@+id/toolbar_fromProject"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input"
                android:backgroundTint="@color/colorWhite"
                android:elevation="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="8dp"
                    app:cardCornerRadius="5dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:orientation="vertical">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NIK"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:layout_weight="2"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"

                                android:textColor="@color/colorWhite" />

                            <TextView
                                android:id="@+id/txNik"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="________"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:paddingLeft="8dp"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nama"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:layout_weight="2"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/colorWhite" />

                            <TextView
                                android:id="@+id/txNama"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="________"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:paddingLeft="8dp"
                                />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Divisi"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:layout_weight="2"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=":"
                                android:textColor="@color/colorWhite" />

                            <TextView
                                android:id="@+id/txDivisi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="________"
                                android:textColor="@color/colorWhite"
                                android:textSize="16dp"
                                android:layout_weight="1"
                                android:paddingLeft="8dp"
                                />

                            <TextView
                                android:id="@+id/txNoDivisi"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true">

                    <TextView
                        android:layout_marginStart="@dimen/padd_10"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="left|center"
                        android:textColor="@color/black"
                        android:text="Jam"/>

                    <EditText
                        android:id="@+id/edJam"
                        android:layout_width="0dp"
                        android:textColor="@color/light_grey"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input_rounded"
                        android:clickable="false"
                        android:textSize="12dp"
                        android:cursorVisible="true"
                        android:focusableInTouchMode="true"
                        android:selectAllOnFocus="true"
                        tools:capitalize="characters"
                        android:gravity="center"
                        />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:text="Tanggal"
                        />

                    <EditText
                        android:textSize="12dp"
                        android:id="@+id/edTgl"
                        android:layout_width="0dp"
                        android:textColor="@color/light_grey"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/bg_input_rounded"
                        android:clickable="false"
                        android:cursorVisible="true"
                        android:focusableInTouchMode="true"
                        android:selectAllOnFocus="true"
                        tools:capitalize="characters"
                        android:gravity="center"
                        />

                </LinearLayout>


                <fragment
                    android:id="@+id/map_view"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginStart="@dimen/padd_10"
                    android:layout_marginTop="@dimen/padd_10"
                    android:layout_marginEnd="@dimen/padd_10"
                    tools:context=".Map_Customer" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Lokasi Anda :"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />


                <ProgressBar
                    android:id="@+id/pbLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tx_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="==============="
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:padding="8dp"
                    />









                <!--<TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Lokasi Anda :"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold" />-->




                <!--<TextView
                    android:id="@+id/tvLokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="==============="
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:padding="8dp"
                    />-->




                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_detIzin"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:src="@drawable/upload"
                    android:layout_height="150dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/foto_detail_izin"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/blue"
                    android:layout_margin="8dp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp">
                    <Button
                        android:id="@+id/btnSimpan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_input"
                        android:backgroundTint="@color/btnPrimary"
                        android:text="SIMPAN"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>