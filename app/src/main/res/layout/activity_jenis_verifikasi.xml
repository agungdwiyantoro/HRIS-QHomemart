<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".izin.izinDinasMT.SecVerTest.JenisVerifikasi">

    <ImageView
        android:id="@+id/ivBackJenisVerifikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_left_black_48dp"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifikasi Izin"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:src="@drawable/ic_security_verifikasi"
        android:layout_margin="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvJenisVerMT"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/security"
                    android:padding="16dp"
                    android:layout_weight="1.5"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Verifikasi Izin Meninggalkan Tugas"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cvJenisVerDinas"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/security"
                    android:padding="16dp"
                    android:layout_weight="1.5"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Verifikasi Izin Tugas Dinas"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textSize="18dp"
                    android:gravity="center|left"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>