                                android:text="KET BACKGROUND  :HIJAU (ANGSURAN)/ KUNING (PINJAMAN)"/>

                            <TextView
                                android:layout_marginStart="@dimen/padd_10"
                                android:layout_marginEnd="@dimen/padd_10"
                                android:id="@+id/tvPromo2"
