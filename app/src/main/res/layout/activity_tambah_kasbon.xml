<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:id="@+id/lytoolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    >

                    <include
                        android:id="@+id/toolbar_abs"
                        layout="@layout/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/colorWhite"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="8dp"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:orientation="vertical">

                            <!--<TextView
                                android:id="@+id/tgl"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="10-12-2020"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:layout_margin="8dp"
                                />-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="NIK"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="2"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"

                                    android:textColor="@color/colorWhite" />

                                <TextView
                                    android:id="@+id/txNik"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="________"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="8dp"
                                    />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nama"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="2"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"

                                    android:textColor="@color/colorWhite" />

                                <TextView
                                    android:id="@+id/txNama"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="________"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="8dp"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Divisi"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="2"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"

                                    android:textColor="@color/colorWhite" />

                                <TextView
                                    android:id="@+id/txDivisi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="________"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="8dp"
                                    />

                                <TextView
                                    android:id="@+id/txNoDivisi"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="TEST"
                                    android:textColor="@color/black"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Jabatan"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="2"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"

                                    android:textColor="@color/colorWhite" />

                                <TextView
                                    android:id="@+id/txJabatan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="________"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16dp"
                                    android:layout_weight="1"
                                    android:paddingLeft="8dp"
                                    />

                                <TextView
                                    android:id="@+id/txNoJabatan"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text="TEST"
                                    android:textColor="@color/black"
                                    android:visibility="gone" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="horizontal"
                                >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Limit Pinjam"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold"
                                    android:textSize="16dp"
                                    android:layout_weight="2"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=":"
                                    android:textColor="@color/colorWhite"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/txLimit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="right"
                                    android:text="Rp.0"
                                    android:textColor="#FFC000"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:layout_weight="1"
                                    />

                                <TextView
                                    android:id="@+id/txBatasUm"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/txPersenSaldo"
                                    android:layout_width="100dp"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:visibility="gone" />
                            </LinearLayout>


                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:layout_margin="8dp"

                        android:padding="8dp"
                        >

                        <TextView
                            android:id="@+id/txJenis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:text="Jenis"
                            android:layout_weight="3"
                            />

                        <Spinner
                            android:id="@+id/edJenis"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:clickable="false"
                            android:cursorVisible="true"
                            android:focusableInTouchMode="true"
                            android:inputType="text"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:selectAllOnFocus="true"
                            tools:capitalize="characters"
                            android:backgroundTint="@color/btnPrimary"
                            />

                        <!--<ImageButton
                            android:id="@+id/btnTgl"
                            android:layout_width="52dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="-50dp"
                            android:background="@color/float_transparent"
                            android:src="@drawable/ic_navigate_next" />-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:layout_margin="8dp"

                        android:padding="8dp"
                        >

                        <TextView
                            android:id="@+id/txNominal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|center"
                            android:textColor="@color/black"
                            android:text="Nominal"
                            android:layout_weight="3"
                            />

                        <EditText
                            android:id="@+id/edNominal"
                            android:layout_width="match_parent"
                            android:textColor="@color/black"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:cursorVisible="true"
                            android:focusableInTouchMode="true"
                            android:inputType="number"
                            android:paddingLeft="16dp"
                            android:hint="0"
                            android:paddingRight="16dp"
                            android:selectAllOnFocus="true"
                            tools:capitalize="characters"
                            android:layout_weight="1"
                            android:textAlignment="textEnd"
                            android:backgroundTint="@color/btnPrimary"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:layout_margin="8dp"

                        android:padding="8dp"
                        >

                        <TextView
                            android:id="@+id/txAlasan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/black"
                            android:gravity="left|center"
                            android:text="Alasan"
                            android:layout_weight="3"
                            />

                        <EditText
                            android:id="@+id/edAlasan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="true"
                            android:textColor="@color/black"
                            android:focusableInTouchMode="true"
                            android:inputType="textMultiLine"
                            android:selectAllOnFocus="true"
                            tools:capitalize="characters"
                            android:layout_weight="1"
                            android:lines="4"
                            android:backgroundTint="@color/btnPrimary"
                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                android:layout_margin="8dp"
                >

                <Button
                    android:id="@+id/btnPengajuan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIMPAN"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:background="@color/colorPrimary"
                    />

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>

</LinearLayout>