        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tIlMasukKerja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Tanggal Masuk Kerja"
                    android:textColorHint="@color/black"
                    app:errorTextAppearance="@style/error_appearance"
                    android:layout_margin="8dp">

                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/etMasukKerja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawablePadding="8dp"
                        android:drawableTint="#1976D2"
                        android:inputType="text"
                        android:padding="12dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/btn_tgl_masuk_kerja"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_date" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tIlAlamatKtp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Alamat KTP"
                    android:textColorHint="@color/black"
                    app:errorTextAppearance="@style/error_appearance"
                    android:layout_margin="8dp">

                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/etAlamatKtp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawableLeft="@drawable/ic_baseline_location_on_24"
                        android:drawablePadding="8dp"
                        android:drawableTint="#1976D2"
                        android:inputType="text|textMultiLine"
                        android:maxLines="10"
                        android:padding="12dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imgAlamat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_pin_map" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tIlAlamatNow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Alamat Sekarang"
                    android:textColorHint="@color/black"
                    app:errorTextAppearance="@style/error_appearance"
                    android:layout_margin="8dp">

                    <EditText
                        android:fontFamily="@font/montserrat_regular"
                        android:id="@+id/etAlamatNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:drawableLeft="@drawable/ic_pin_map"
                        android:drawablePadding="8dp"
                        android:drawableTint="#1976D2"
                        android:inputType="text|textMultiLine"
                        android:maxLines="10"
                        android:padding="12dp"
                        android:textColor="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/imgAlamat2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="7"
                    android:paddingRight="8dp"
                    android:src="@drawable/ic_pin_map" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlNoHP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor HP"
                android:textColorHint="@color/black"
                app:errorTextAppearance="@style/error_appearance"
                android:layout_margin="8dp">

                <EditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/etNoHP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#1976D2"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textColorHint="@color/black"
                app:errorTextAppearance="@style/error_appearance"
                android:layout_margin="8dp"

                >

                <EditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_baseline_alternate_email_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#1976D2"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlNpWp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor NPWP"
                android:textColorHint="@color/black"
                app:errorTextAppearance="@style/error_appearance"
                android:layout_margin="8dp"

                >

                <EditText
                    android:fontFamily="@font/montserrat_regular"
                    android:id="@+id/etNpWp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:drawableLeft="@drawable/ic_baseline_calendar_view_day_24"
                    android:drawablePadding="8dp"
                    android:drawableTint="#1976D2"
                    android:inputType="text"
                    android:maxLength="15"
                    android:padding="12dp"
                    android:textColor="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            android:layout_margin="8dp"
            android:backgroundTint="#0288D1"
            >

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tIlKeluarga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Keluarga"
                android:textColorHint="@color/black"
                app:errorTextAppearance="@style/error_appearance"
                android:layout_margin="8dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lihat Daftar Keluarga"
                    android:textSize="16sp"
                    android:fontFamily="@font/montserrat_regular"
                    android:gravity="center"
                    android:textColor="#fff"
                    android:drawableRight="@drawable/ic_baseline_supervised_user_circle_24"
                    android:drawableTint="#fff"
                    />

            </com.google.android.material.textfield.TextInputLayout>



        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Foto KTP"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgKtp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_image_search_24" />


                    <TextView
                        android:id="@+id/tx_size_ktp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="size image"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Foto KK"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgKK"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_image_search_24" />

                    <TextView
                        android:id="@+id/tx_size_kk"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="size image"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Foto NPWP"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/imgNpWp"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_baseline_image_search_24" />

                    <TextView
                        android:id="@+id/tx_size_npwp"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="size image"
                        android:textColor="#000"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnUpdateData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#388E3C"
            android:text="Update Data"
            android:textColor="#fff" />

    </LinearLayout>

