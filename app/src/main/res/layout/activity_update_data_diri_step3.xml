<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".scanKTP.UpdateDataDiriStep3"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_data_tambahan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_tambahan"
        style="@style/TextViewHeaderStyle"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_npwp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/npwp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tv_data_tambahan"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/et_npwp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        style="@style/EditTextStyle"
        android:inputType="number"
        android:imeOptions="actionDone"

        app:layout_constraintTop_toBottomOf="@+id/tv_npwp" />

    <TextView
        android:id="@+id/tv_foto_ktp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/foto_ktp"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@+id/et_npwp"
        app:layout_constraintStart_toStartOf="@+id/iv_foto_ktp"
        app:layout_constraintEnd_toStartOf="@+id/tv_foto_kk"/>

    <TextView
        android:id="@+id/tv_foto_kk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/foto_kk"
        android:layout_marginTop="10dp"

        app:layout_constraintTop_toBottomOf="@+id/et_npwp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_foto_ktp"/>

    <ImageView
        android:id="@+id/iv_foto_ktp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/empty_foto"

        app:layout_constraintTop_toBottomOf="@+id/tv_foto_ktp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_foto_kk"/>

    <ImageView
        android:id="@+id/iv_foto_kk"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/empty_foto"

        app:layout_constraintTop_toBottomOf="@+id/tv_foto_ktp"
        app:layout_constraintStart_toStartOf="@+id/tv_foto_kk" />

    <TextView
        android:id="@+id/tv_foto_npwp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/foto_npwp"

        app:layout_constraintTop_toBottomOf="@+id/iv_foto_ktp"
        app:layout_constraintStart_toStartOf="@+id/tv_foto_ktp" />

    <ImageView
        android:id="@+id/iv_foto_npwp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/empty_foto"

        app:layout_constraintTop_toBottomOf="@+id/tv_foto_npwp"
        app:layout_constraintStart_toStartOf="@+id/tv_foto_ktp"
        app:layout_constraintEnd_toEndOf="@+id/iv_foto_ktp" />

    <Button
        android:id="@+id/bt_lihat_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lihat_detail"
        style="@style/ButtonStylePositive"


        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>