<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="INFORMASI"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="KET BACKGROUND :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_label_green_24dp"
            android:drawablePadding="8dp"
            android:text="Hijau (ANGSURAN)"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_regular"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16sp"
            android:drawableLeft="@drawable/ic_label_yellow_24dp"
            android:drawablePadding="8dp"
            android:text="Kuning (PINJAMAN)"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_regular"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="KET POINT :"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dot_blue"
            android:drawablePadding="8dp"
            android:padding="4dp"
            android:text="Biru (ACC)"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_regular"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dot_oranye"
            android:drawablePadding="8dp"
            android:padding="4dp"
            android:text="Hitam (PENDING)"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_regular"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_dot_red"
            android:drawablePadding="8dp"
            android:padding="4dp"
            android:text="Merah (DITOLAK)"
            android:textColor="@color/black"
            android:fontFamily="@font/opensans_regular"
            />

    </LinearLayout>



</androidx.cardview.widget.CardView>
