<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tx_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pesan_persetujuan_izin"
            android:gravity="center"
            android:textColor="@color/quantum_grey700"
            />

        <TextView
            android:id="@+id/tx_nama_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="Muhamad Dios Pratama"
            android:textColor="#000"
            android:textStyle="bold" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilAlasan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alasan"
            android:visibility="gone"
            android:theme="@style/VerifyTextInputLayoutStyle"
            style="@style/VerifyTextInputLayoutStyle"
            android:layout_margin="16dp"
            >

            <EditText
                android:id="@+id/etAlasan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="4"
                android:textColor="@color/black"
                />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/cvCancelDialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/abu_abu"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                >

                <TextView
                    android:id="@+id/tvCancelDialog"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="Batal"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cvSubmitDialog"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="8dp"
                >

                <TextView
                    android:id="@+id/tvSubmitDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>




