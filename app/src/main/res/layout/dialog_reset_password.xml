<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset Password"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pastikan device ini pernah digunakan untuk login sebelumnya."
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilDialogNik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nomor Induk Kependudukan"
                android:theme="@style/VerifyTextInputLayoutStyle"
                style="@style/VerifyTextInputLayoutStyle"
                android:layout_margin="16dp"
                >

                <EditText
                    android:id="@+id/etDialogNik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:maxLength="16"
                    android:inputType="number"
                    />

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cvCancelDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/abu_abu"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    >

                    <TextView
                        android:id="@+id/tvCancelDialog"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Batal"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cvSubmitDialog"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@color/main_blue_color"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Password"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>




