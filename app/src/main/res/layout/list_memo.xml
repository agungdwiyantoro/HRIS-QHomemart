<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMemo"

    android:layout_width="200dp"
    android:layout_height="80dp"
    android:elevation="@dimen/padd_10"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    >
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:background="@drawable/gradient"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:padding="2dp"
                    android:id="@+id/tvJudul"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Judul Memo Judul Memo Jud"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvJenis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="right|bottom"
                        android:text="@string/jenis_notulen"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/tvTgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:gravity="right|bottom"
                        android:text="17/07/2020"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                         />

                </LinearLayout>




                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_memo_baru"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorWhite"
                    android:background="@android:color/holo_red_dark"
                    android:text="@string/new_icon"
                    android:textSize="8dp"
                    android:textAlignment="center"
                    android:padding="2dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
                    android:textStyle="bold"
                    tools:ignore="MissingConstraints" />

            </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
