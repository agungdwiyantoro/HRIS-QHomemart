<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvMemo"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:elevation="@dimen/padd_10"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    >



    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorWhite">
        <TextView
            android:visibility="visible"
            android:id="@+id/tv_memo_baru"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorWhite"
            android:background="@android:color/holo_red_dark"
            android:text="@string/new_icon"
            android:textSize="8dp"
            android:textAlignment="center"
            android:padding="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large.Inverse"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">



            <ImageView
                android:padding="20dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_note"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/lin_judul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:fontFamily="@font/exo_variablefont_wght"
                        android:padding="5dp"
                        android:id="@+id/tvJudul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:text="Judul Memo Judul Memo Jud"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent" />




                </LinearLayout>



                <LinearLayout
                    android:layout_marginStart="@dimen/padd_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvJenis"
                        android:fontFamily="@font/exo_variablefont_wght"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|bottom"
                        android:text="@string/jenis_notulen"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_marginStart="@dimen/padd_10"
                        android:fontFamily="@font/exo_variablefont_wght"
                        android:id="@+id/tvTgl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|bottom"
                        android:text="17/07/2020"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent" />

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>
