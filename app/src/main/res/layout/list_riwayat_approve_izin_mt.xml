<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cvSQList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textColor="@color/light_grey"
                    android:id="@+id/tx_waktu"
                    android:layout_width="0dp"
                    android:textStyle="bold|italic"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:text="01/01/1995 - 01/01/2020"
                    android:textSize="15sp"
                    android:paddingLeft="8dp"
                    />




            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/light_grey"
                    android:id="@+id/tx_jenisIzin"
                    android:layout_width="0dp"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Jenis Izin : Cuti ditanggung"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="@color/light_grey"
                    android:id="@+id/tx_nama"
                    android:layout_width="0dp"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start"
                    android:text="Nama : Cuti ditanggung"
                    android:textSize="12sp"
                    />

            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">



                <TextView
                    android:textColor="@color/light_grey"
                    android:id="@+id/tx_kepentingan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textStyle="bold|italic"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor ."
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_approveHead"
                    android:textAlignment="textStart"
                    android:layout_width="0dp"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/red_btn_bg_pressed_color"
                    android:gravity="start"
                    android:text="Approve Head:__"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/tx_detail"
                    android:textAlignment="textEnd"
                    android:layout_width="0dp"
                    android:textStyle="bold|italic"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/greennew"
                    android:gravity="start"
                    android:text="Detail"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>