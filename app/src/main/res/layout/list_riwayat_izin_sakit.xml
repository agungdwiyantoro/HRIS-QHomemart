<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    >

    <android.support.v7.widget.CardView

        android:id="@+id/cvSQList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="4dp">

        <LinearLayout

            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:foregroundGravity="left"
                    android:id="@+id/imStatus"
                    android:layout_marginStart="-10dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/ic_dot_point_red" />

            <LinearLayout
                android:padding="@dimen/padd_10"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvKet"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left"
                    android:textColor="@color/main_color_black"
                    android:text="Demam Berdarah"
                    android:textSize="18sp" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tvAlasan"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:textColor="@color/main_color_black"
                    android:text="izin dokter"
                    android:textSize="14sp"
                    />


            </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/main_color_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="36dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"
                        android:text="20"/>

                    <TextView
                        android:textColor="@color/main_color_black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="9dp"
                        android:fontFamily="@font/roboto_light"
                        android:textAlignment="center"
                        android:text="Dec 2021"/>




                </LinearLayout>









            </LinearLayout>








        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>